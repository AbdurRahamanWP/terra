{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
      "appearanceTools": true,
      "color": {
        "defaultPalette": false,
        "palette": [
          { "slug": "rg-white", "color": "#fff", "name": "RGTheme White" },
          { "slug": "rg-gray-100", "color": "rgb(243 244 246)", "name": "RGTheme Gray 100" },
          { "slug": "rg-gray-200", "color": "rgb(229 231 235)", "name": "RGTheme Gray 200" },
          { "slug": "rg-gray-300", "color": "rgb(209 213 219)", "name": "RGTheme Gray 300" },
          { "slug": "rg-gray-400", "color": "rgb(156 163 175)", "name": "RGTheme Gray 400" },
          { "slug": "rg-gray-500", "color": "rgb(107 114 128)", "name": "RGTheme Gray 500" },
          { "slug": "rg-gray-600", "color": "rgb(75 85 99)", "name": "RGTheme Gray 600" },
          { "slug": "rg-gray-700", "color": "rgb(55 65 81)", "name": "RGTheme Gray 700" },
          { "slug": "rg-gray-800", "color": "rgb(31 41 55)", "name": "RGTheme Gray 800" },
          { "slug": "rg-gray-900", "color": "rgb(17 24 39)", "name": "RGTheme Gray 900" },
          { "slug": "rg-primary", "color": "#101010", "name": "RGTheme Primary" },
          { "slug": "rg-secondary", "color": "#101010bf", "name": "RGTheme Secondary" },
          { "slug": "rg-hover", "color": "#ff4c60", "name": "RGTheme Hover" },
          { "slug": "rg-border", "color": "#EEEEEE", "name": "RGTheme Border" },
          { "slug": "rg-success", "color": "rgb(52 211 153)", "name": "RGTheme Success" },
          { "slug": "rg-info", "color": "rgb(96 165 250)", "name": "RGTheme Info" },
          { "slug": "rg-warning", "color": "rgb(251 146 60)", "name": "RGTheme Warning" },
          { "slug": "rg-danger", "color": "rgb(236 72 153)", "name": "RGTheme Danger" }
        ],
        "background": true,
        "text": true,
        "link": true,
        "custom": true,
        "duotone": [
          { "slug": "rg-pink-sunset", "colors": ["#11245e", "#dc4379"], "name": "RGTheme Pink Sunset" }
        ],
        "defaultGradients": false,
        "gradients": [
          {
            "slug": "rg-summer-dog",
            "name": "RGTheme Summer Dog",
            "gradient": "linear-gradient(#a8ff78, #78ffd6)"
          }
        ]
      },
      "blocks": {
        "core/site-title": {
          "color": {
            "defaultPalette": true,
            "palette": [
              { "slug": "rg-primary", "color": "#ef4444", "name": "RGTheme Primary" }
            ],
            "link": true,
            "custom": false,
            "gradients": [],
            "customGradient": false
          },
          "typography": {
            "fontFamilies": [
              { 
                "fontFamily": "Prompt, sans-serif", 
                "slug": "rg-prompt",
                "name": "RGTheme Prompt" 
              }
            ]
          }
        },
        "core/cover": {
          "color": {
            "duotone": [],
            "customDuotone": false
          }
        },
        "core/preformatted": {
          "typography": {
            "fontSizes": [],
            "customFontSize": false
          }
        }
      },
      "border": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      },
      "typography": {
        "fontFamilies": [
          { 
            "fontFamily": "Prompt, sans-serif", 
            "slug": "rg-prompt",
            "name": "RGTheme Prompt" 
          }
        ],
        "fontSizes": [
          { "slug": "small", "size": "0.75rem", "name": "Small" },
          { "slug": "medium", "size": "1.25rem", "name": "Medium" },
          { "slug": "large", "size": "2.25rem", "name": "Large" },
          { "slug": "x-large", "size": "3rem", "name": "Extra Large" },
          { "slug": "gigantic", "size": "3.75rem", "name": "Gigantic" }
        ],
        "lineHeight": true,
        "dropCap": true,
        "fontWeight": true,
        "fontStyle": true,
        "textTransform": true,
        "letterSpacing": true,
        "textDecoration": true
      },
      "layout": {
        "contentSize": "800px",
        "wideSize": "1100px"
      },
      "spacing": {
        "margin": true,
        "padding": true,
        "units": [
          "px", "rem", "vh", "vw", "%"
        ],
        "blockGap": true
      }
    },
    "styles": {
      "color": {
        "text": "var(--wp--preset--color--rg-gray-700)",
        "background": "var(--wp--preset--color--rg-white)"
      },
      "elements": {
        "link": {
          "color": {
            "text": "var(--wp--preset--color--rg-primary)"
          }
        }
      },
      "blocks": {
        "core/pullquote": {
          "border": {
            "width": "2px",
            "radius": "10px",
            "style": "solid",
            "color": "var(--wp--preset--color--rg-primary)"
          }
        },
        "core/site-title": {
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--rg-prompt)"
          }
        }
      },
      "typography": {
        "fontFamily": "var(--wp--preset--font-family--rg-prompt)",
        "fontSize": "16px",
        "fontStyle": "normal",
        "fontWeight": "normal",
        "lineHeight": "inherit",
        "textDecoration": "none",
        "textTransform": "none"
      },
      "spacing": {
        "margin": {
          "top": "0px",
          "bottom": "0px",
          "left": "0px",
          "right": "0px"
        },
        "padding": {
          "top": "0px",
          "bottom": "0px",
          "left": "0px",
          "right": "0px"
        },
        "blockGap": "1rem"
      }
    },
    "customTemplates": [
      {
        "name": "full-width-page",
        "title": "Full Width Page",
        "postTypes": [
          "page"
        ]
      }
    ]
  }